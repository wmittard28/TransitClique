    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">
    <img src="/images/logo/logo2.png" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
    Transit Clique
  </a>
    </nav>

    <% if !!flash[:message] %>
      <div class="alert alert-dismissible alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>ERROR! </strong><%= flash[:message] %>
      </div>
    <% end %>

    <br><br>
    <div style="text-align: center">
      <h4>Sign Up</h4>
    </div>
    <br>
    <div class="container" style="width:50%;">
      <form class="form-center" action="/signup" method="POST">
        <div class="form-group">
          <label>Username:</label>
          <input type="text" class="form-control" name="username" placeholder="Username">
        </div>
        <div class="form-group">
          <label>Email:</label>
          <input type="email" class="form-control" name="email" placeholder="Email Address">
        </div>
        <div class="form-group">
          <label>Password:</label>
          <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <div style="text-align: center">
          <button type="submit" class="btn btn-dark">Sign Up</button>
        </div>
      </form>
    </div>
    <div style="text-align: center">
      <p>Already have an account? <strong><a href="/login">Log In</a></strong>.</p>
    </div>



